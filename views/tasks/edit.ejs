<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-dark fw-bold d-flex align-items-center">
          <i class="bi bi-pencil-square me-2"></i> Sửa công việc
        </div>
        <div class="card-body p-4">
          <form action="/tasks/edit/<%= task._id %>" method="POST">

            <!-- Tiêu đề -->
            <div class="mb-3">
              <label for="title" class="form-label">Tiêu đề</label>
              <input type="text" name="title" id="title" class="form-control" value="<%= task.title %>" required>
            </div>

            <!-- Mô tả -->
            <div class="mb-3">
              <label for="description" class="form-label">Mô tả</label>
              <textarea name="description" id="description" rows="3" class="form-control"><%= task.description %></textarea>
            </div>

            <!-- Danh mục -->
            <div class="mb-3">
              <label for="category" class="form-label">Danh mục</label>
              <select name="category" id="category" class="form-select">
                <option value="">-- Chọn danh mục --</option>
                <% categories.forEach(cat => { %>
                  <option value="<%= cat._id %>" <%= task.category && task.category._id.toString() === cat._id.toString() ? "selected" : "" %>>
                    <%= cat.name %>
                  </option>
                <% }) %>
              </select>
            </div>

            <!-- Độ ưu tiên -->
            <div class="mb-3">
              <label for="priority" class="form-label">Độ ưu tiên</label>
              <select name="priority" id="priority" class="form-select">
                <option value="Không quan trọng" <%= task.priority==="Không quan trọng"?"selected":"" %>>Không quan trọng</option>
                <option value="Quan trọng" <%= task.priority==="Quan trọng"?"selected":"" %>>Quan trọng</option>
                <option value="Khẩn cấp" <%= task.priority==="Khẩn cấp"?"selected":"" %>>Khẩn cấp</option>
              </select>
            </div>

            <!-- Trạng thái -->
            <div class="mb-3">
              <label for="status" class="form-label">Trạng thái</label>
              <select name="status" id="status" class="form-select">
                <option value="Chưa làm" <%= task.status==="Chưa làm"?"selected":"" %>>Chưa làm</option>
                <option value="Đang làm" <%= task.status==="Đang làm"?"selected":"" %>>Đang làm</option>
                <option value="Hoàn thành" <%= task.status==="Hoàn thành"?"selected":"" %>>Hoàn thành</option>
                <option value="Hoãn" <%= task.status==="Hoãn"?"selected":"" %>>Hoãn</option>
              </select>
            </div>

            <!-- Thời gian -->
            <div class="mb-3">
              <label for="startTime" class="form-label">Thời gian bắt đầu</label>
              <input type="datetime-local" name="startTime" id="startTime" class="form-control"
                value="<%= task.startTime ? task.startTime.toISOString().slice(0,16) : '' %>">
            </div>

            <div class="mb-3">
              <label for="deadline" class="form-label">Hạn chót</label>
              <input type="datetime-local" name="deadline" id="deadline" class="form-control"
                value="<%= task.deadline ? task.deadline.toISOString().slice(0,16) : '' %>">
            </div>

            <div class="mb-3">
              <label for="duration" class="form-label">Thời lượng (giờ)</label>
              <input type="number" name="duration" id="duration" class="form-control" min="0" value="<%= task.duration || '' %>">
            </div>

            <div class="mb-3">
              <label for="reminder" class="form-label">Nhắc nhở trước (phút)</label>
              <input type="number" name="reminder" id="reminder" class="form-control" min="0" value="<%= task.reminder || '' %>">
            </div>

            <!-- Nút -->
            <div class="d-flex justify-content-between">
              <a href="/tasks" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
              </a>
              <button type="submit" class="btn btn-warning">
                <i class="bi bi-save"></i> Cập nhật
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
