<!DOCTYPE html>
<html lang="vi" data-bs-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Xác thực OTP</title>
  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="bg-body-tertiary">

  <!-- Nút đổi theme cố định góc phải -->
  <button id="toggleTheme" 
          class="btn btn-sm btn-outline-secondary border-0 position-fixed top-0 end-0 m-3 rounded-circle shadow"
          style="width: 42px; height: 42px;">
    <i id="themeIcon" class="bi bi-moon fs-5"></i>
  </button>

  <div class="container d-flex flex-column min-vh-100 justify-content-center align-items-center">
    <div class="card shadow-lg rounded-4 p-4" style="max-width: 460px; width: 100%;">
      
      <!-- Tiêu đề -->
      <h2 class="mb-4 text-primary">Nhập mã OTP</h2>

      <!-- Thông báo lỗi -->
      <% if (typeof error !== "undefined" && error) { %>
        <div class="alert alert-danger py-2 mb-3 text-center" role="alert">
          <%= error %>
        </div>
      <% } %>


      <!-- Thông báo thành công -->
      <% if (typeof success !== 'undefined') { %>
        <div class="alert alert-success py-2" role="alert">
          <%= success %>
        </div>
      <% } %>

      <!-- Form OTP -->
      <form action="/verify" method="POST">
        <!-- Email ẩn -->
        <input type="hidden" name="email" value="<%= email %>">

        <!-- Trường nhập OTP -->
        <div class="mb-3">
          <label for="otp" class="form-label">Mã OTP</label>
          <input type="text" name="otp" id="otp" maxlength="6" required
                 class="form-control text-center fs-4 fw-bold text-primary"
                 style="letter-spacing: 8px;">
        </div>

        <!-- Nút xác thực -->
        <div class="d-grid mt-3">
          <button type="submit" class="btn btn-outline-primary rounded-3 btn-lg">
            Xác thực
          </button>
        </div>
      </form>

      <!-- Link gửi lại OTP -->
      <div class="text-center mt-3">
        <p>Chưa nhận được mã? 
          <a href="/resend-otp?email=<%= email %>" class="text-decoration-none text-primary">Gửi lại OTP</a>
        </p>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script src="/javascripts/theme.js"></script>
</body>
</html>
